// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  product_id      Int       @id @default(autoincrement())
  name            String    
  description     String
  cost            Float
  image_filename  String
}

model Customer {
  customer_id     Int       @id @default(autoincrement())
  email           String    @unique
  password        String
  first_name      String
  last_name       String
}

model Purchase {
  purchase_id     Int       @id @default(autoincrement())
  customer_id     Int
  street          String
  city            String
  province        String
  country         String
  postal_code     String
  credit_card     Int
  credit_expire   String
  credit_cvv      Int
  invoice_amt     Float
  invoice_tax     Float
  invoice_total   Float
  order_date      DateTime  @default(now())
}

model PurchaseItem {
  purchase_id     Int
  product_id      Int
  quantity        Int

  @@id([purchase_id, product_id])
}